{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "config_repo_settings": {
            "type": "object",
            "properties": {
                "repo": { "type": "string", "format": "uri" },
                "branch": { "type": "string" },
                "dockerhub": { "type": "string" },
                "dockertag": {
                    "anyOf": [
                        { "type": "string" },
                        { "type": "array" }
                    ]
                }
            },
            "required": ["repo"]
        },
        "config_repo": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
                "[a-z0-9_-]*": { "$ref": "#/definitions/config_repo_settings" }
            }
        },
        "tox": {
            "type": "object",
            "properties": {
                "testenv": { "type": "array" },
                "tox_file": { "type": "string" }
            },
            "required": ["testenv"],
            "additionalProperties": false
        },
        "credentials": {
            "type": "object",
            "minProperties": 1,
            "properties": {
                "string": { "$ref": "#/definitions/credentials_string" },
                "file": { "$ref": "#/definitions/credentials_string" },
                "zip": { "$ref": "#/definitions/credentials_string" },
                "certificate": { "$ref": "#/definitions/credentials_certificate" },
                "usernamePassword": { "$ref": "#/definitions/credentials_usernamePassword" },
                "sshUserPrivateKey": { "$ref": "#/definitions/credentials_sshUserPrivateKey" }
            },
            "additionalProperties": false
        },
        "credentials_string": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["string", "file", "zip"]
                },
                "id": { "type": "string" },
                "variable": { "type": "string" }
            },
            "required": ["id"],
            "additionalProperties": false
        },
        "credentials_certificate": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "certificate"
                },
                "id": { "type": "string" },
                "keystore_var": { "type": "string" },
                "alias_var": { "type": "string" },
                "password_var": { "type": "string" }
            },
            "required": ["keystore_var", "id"],
            "additionalProperties": false
        },
        "credentials_username_password": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "username_password"
                },
                "id": { "type": "string" },
                "username_var": { "type": "string" },
                "password_var": { "type": "string" }
            },
            "required": ["id", "username_var", "password_var"],
            "additionalProperties": false
        },
        "credentials_ssh_user_private_key": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "ssh_user_private_key"
                },
                "id": { "type": "string" },
                "keyfile_var": { "type": "string" },
                "passphrase_var": { "type": "string" },
                "username_var": { "type": "string" }
            },
            "required": ["keyfile_var", "id"],
            "additionalProperties": false
        },
        "repo_settings": {
            "type": "object",
            "properties": {
                "container": { "type": "string" },
                "commands": { "type": "array" },
                "tox": { "$ref": "#/definitions/tox" }
            },
            "oneOf": [
                { "required": ["commands"] },
                { "required": ["tox"] }
            ],
            "additionalProperties": false,
            "dependencies": {
                "commands": ["container"]
            }
        },
        "sqa_criterion_repo": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
                "[a-z0-9_-]*": { "$ref": "#/definitions/repo_settings" }
            }
        },
        "sqa_criterion": {
            "type": "object",
            "properties": {
                "repos": { "$ref": "#/definitions/sqa_criterion_repo" }
            },
            "required": ["repos"],
            "additionalProperties": false
        },
        "environment": {
            "description": "Sets the environment variables required for the runtime context",
            "type": "object",
            "minProperties": 1,
            "propertyNames": {
                "pattern": "^[A-Z]{1}[A-Z0-9_]*"
            }
        }
    },
    "type": "object",
    "properties": {
        "config": {
            "description": "Definition of the generic parameters to be used by the subsequent settings",
            "type": "object",
            "properties": {
                "node_agent": {
                    "type": "string",
                    "enum": ["docker_compose"]
                },
                "deploy_template": { "type": "string" },
                "project_repos": { "$ref": "#/definitions/config_repo" },
                "credentials": { "$ref": "#/definitions/credentials" }
            },
            "additionalProperties": false,
            "required": ["project_repos"]
        },
        "sqa_criteria": {
            "description": "Contains all the required SQA baseline's criteria definitions",
            "type": "object",
            "minProperties": 1,
            "properties": {
                "qc_style": { "$ref": "#/definitions/sqa_criterion" },
                "qc_coverage": { "$ref": "#/definitions/sqa_criterion" },
                "qc_functional": { "$ref": "#/definitions/sqa_criterion" },
                "qc_security": { "$ref": "#/definitions/sqa_criterion" },
                "qc_doc": { "$ref": "#/definitions/sqa_criterion" }
            },
            "additionalProperties": false
        },
        "environment": { "$ref": "#/definitions/environment" },
        "timeout": {
            "description": "Sets the timeout for the pipeline execution",
            "type": "integer",
            "minimum": 1
        }
    },
    "required": [
        "config",
        "sqa_criteria"
    ],
    "additionalProperties": false
}
