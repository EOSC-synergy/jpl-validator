{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "config_repo_settings": {
            "type": "object",
            "properties": {
                "repo": { "type": "string", "format": "uri" },
                "branch": { "type": "string" },
                "dockerhub": { "type": "string" },
                "dockertag": {
                    "anyOf": [
                        { "type": "string" },
                        { "type": "array" }
                    ]
                }
            },
            "required": ["repo"]
        },
        "config_repo": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
                "[a-z0-9_-]*": { "$ref": "#/definitions/config_repo_settings" }
            }
        },
        "tox": {
            "type": "object",
            "properties": {
                "testenv": { "type": "array" },
                "tox_file": { "type": "string" }
            },
            "required": ["testenv"],
            "additionalProperties": false
        },
        "withCredentials": {
            "type": "object",
            "properties": {
                "string": { "$ref": "#/definitions/withCredentials_string" },
                "file": { "$ref": "#/definitions/withCredentials_string" },
                "zip": { "$ref": "#/definitions/withCredentials_string" },
                "certificate": { "$ref": "#/definitions/withCredentials_certificate" },
                "usernamePassword": { "$ref": "#/definitions/withCredentials_usernamePassword" },
                "sshUserPrivateKey": { "$ref": "#/definitions/withCredentials_sshUserPrivateKey" }
            },
            "additionalProperties": false
        },
        "withCredentials_string": {
            "type": "object",
            "properties": {
                "credentialsId": { "type": "string" },
                "variable": { "type": "string" }
            },
            "required": ["credentialsId", "variable"],
            "additionalProperties": false
        },
        "withCredentials_certificate": {
            "type": "object",
            "properties": {
                "keystoreVariable": { "type": "string" },
                "credentialsId": { "type": "string" },
                "aliasVariable": { "type": "string" },
                "passwordVariable": { "type": "string" }
            },
            "required": ["keystoreVariable", "credentialsId"],
            "additionalProperties": false
        },
        "withCredentials_usernamePassword": {
            "type": "object",
            "properties": {
                "credentialsId": { "type": "string" },
                "usernameVariable": { "type": "string" },
                "passwordVariable": { "type": "string" }
            },
            "required": ["credentialsId", "usernameVariable", "passwordVariable"],
            "additionalProperties": false
        },
        "withCredentials_sshUserPrivateKey": {
            "type": "object",
            "properties": {
                "keyFileVariable": { "type": "string" },
                "credentialsId": { "type": "string" },
                "passphraseVariable": { "type": "string" },
                "usernameVariable": { "type": "string" }
            },
            "required": ["keyFileVariable", "credentialsId"],
            "additionalProperties": false
        },
        "repo_settings": {
            "type": "object",
            "properties": {
                "container": { "type": "string" },
                "commands": { "type": "array" },
                "tox": { "$ref": "#/definitions/tox" },
                "withCredentials": { "$ref": "#/definitions/withCredentials" }
            },
            "oneOf": [
                { "required": ["commands"] },
                { "required": ["tox"] }
            ],
            "additionalProperties": false,
            "dependencies": {
                "commands": ["container"]
            }
        },
        "sqa_criterion_repo": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
                "[a-z0-9_-]*": { "$ref": "#/definitions/repo_settings" }
            }
        },
        "sqa_criterion": {
            "type": "object",
            "minProperties": 1,
            "properties": {
                "repos": { "$ref": "#/definitions/sqa_criterion_repo" }
            },
            "required": ["repos"],
            "additionalProperties": false
        }
    },
    "type": "object",
    "properties": {
        "config": {
            "description": "Definition of the generic parameters to be used by the subsequent settings",
            "type": "object",
            "properties": {
                "node_agent": {
                    "type": "string",
                    "enum": ["docker-compose"]
                },
                "deploy_template": { "type": "string" },
                "project_repos": { "$ref": "#/definitions/config_repo" }
            },
            "required": ["project_repos"]
        },
        "sqa-criteria": {
            "description": "Contains all the required SQA baseline's criteria definitions",
            "type": "object",
            "minProperties": 1,
            "properties": {
                "qc-style": { "$ref": "#/definitions/sqa_criterion" },
                "qc-coverage": { "$ref": "#/definitions/sqa_criterion" },
                "qc-functional": { "$ref": "#/definitions/sqa_criterion" },
                "qc-security": { "$ref": "#/definitions/sqa_criterion" },
                "qc-doc": { "$ref": "#/definitions/sqa_criterion" }
            },
            "additionalProperties": false
        },
        "environment": {
            "description": "Sets the environment variables required to execute the previouos SQA criteria blocks",
            "type": "object",
            "propertyNames": {
                "pattern": "^[A-Z]{1}[A-Z0-9_]*"
            }
        },
        "timeout": {
            "description": "Sets the timeout for the pipeline execution",
            "type": "integer",
            "minimum": 1
        }
    },
    "required": [
        "config",
        "sqa-criteria"
    ],
    "additionalProperties": false
}